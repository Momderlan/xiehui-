/* pages/match-detail/match-detail.wxss */

.container {
  padding-bottom: 120rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 赛事封面图 */
.match-header {
  position: relative;
  width: 100%;
  height: 350rpx;
}

.match-image {
  width: 100%;
  height: 100%;
}

.match-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 24rpx;
}

/* 赛事标题 */
.match-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx;
  color: #333;
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #AACFFF;
  padding-left: 16rpx;
}

/* 基本信息 */
.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.info-label {
  width: 180rpx;
  color: #666;
}

.info-value {
  flex: 1;
  color: #333;
}

/* 赛事描述 */
.desc-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* 参赛要求 */
.req-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* 比赛项目 */
.category-list {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
}

/* 赛程安排 */
.schedule-item {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.schedule-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.schedule-date {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.event-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
  padding-left: 20rpx;
  position: relative;
}

.event-item:before {
  content: '';
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #AACFFF;
  border-radius: 50%;
}

/* 报名按钮 */
.register-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.register-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.register-btn[disabled] {
  background-color: #ccc !important;
  color: #fff !important;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}


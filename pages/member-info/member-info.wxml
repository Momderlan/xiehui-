<!--pages/member-info/member-info.wxml-->
<view class="container" wx:if="{{memberInfo}}">
  <!-- 返回按钮 -->
  <view class="back-btn" bindtap="onBackTap">
    <text class="iconfont icon-back"></text>
  </view>

  <!-- 页面标题 -->
  <view class="page-title">会员信息</view>

  <!-- 会员基本信息 -->
  <view class="info-section card">
    <view class="section-title">基本信息</view>
    <view class="info-item">
      <text class="info-label">会员姓名：</text>
      <text class="info-value">{{memberInfo.name}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">会员等级：</text>
      <text class="info-value" style="color: {{themeColor}}">{{memberInfo.level}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">手机号码：</text>
      <text class="info-value">{{memberInfo.phone}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">加入时间：</text>
      <text class="info-value">{{memberInfo.joinDate}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">到期时间：</text>
      <text class="info-value">{{memberInfo.expireDate}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">会员积分：</text>
      <text class="info-value">{{memberInfo.points}}</text>
    </view>
  </view>

  <!-- 会员活动记录 -->
  <view class="activity-section card">
    <view class="section-title">活动记录</view>
    <view class="activity-list">
      <block wx:if="{{memberInfo.activities && memberInfo.activities.length > 0}}">
        <view class="activity-item" wx:for="{{memberInfo.activities}}" wx:key="*this">
          <view class="activity-date">{{item.date}}</view>
          <view class="activity-content">
            <view class="activity-name">{{item.name}}</view>
            <view class="activity-status" style="color: {{themeColor}}">{{item.status}}</view>
          </view>
        </view>
      </block>
      <view class="no-data" wx:else>
        <text>暂无活动记录</text>
      </view>
    </view>
  </view>

  <!-- 会员权益 -->
  <view class="benefit-section card">
    <view class="section-title">会员权益</view>
    <view class="benefit-list">
      <view class="benefit-item">
        <text class="iconfont icon-check" style="color: {{themeColor}}"></text>
        <text>基础训练场地预约</text>
      </view>
      <view class="benefit-item">
        <text class="iconfont icon-check" style="color: {{themeColor}}"></text>
        <text>会员活动参与权</text>
      </view>
      <view class="benefit-item">
        <text class="iconfont icon-check" style="color: {{themeColor}}"></text>
        <text>赛事报名优先权</text>
      </view>
      <view class="benefit-item">
        <text class="iconfont icon-check" style="color: {{themeColor}}"></text>
        <text>专业教练指导（每月2次）</text>
      </view>
      <view class="benefit-item">
        <text class="iconfont icon-check" style="color: {{themeColor}}"></text>
        <text>会员专属赛事</text>
      </view>
      <view class="benefit-item">
        <text class="iconfont icon-check" style="color: {{themeColor}}"></text>
        <text>装备折扣</text>
      </view>
    </view>
  </view>
</view>

<!-- 加载中 -->
<view class="loading" wx:else>
  <text>加载中...</text>
</view>
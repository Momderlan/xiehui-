/* pages/member-info/member-info.wxss */

.container {
  padding-top: 80rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #AACFFF;
  padding-left: 16rpx;
}

/* 基本信息 */
.info-section {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.info-label {
  width: 180rpx;
  color: #666;
}

.info-value {
  flex: 1;
  color: #333;
}

/* 活动记录 */
.activity-section {
  margin-bottom: 30rpx;
}

.activity-list {
  width: 100%;
}

.activity-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-date {
  width: 180rpx;
  font-size: 26rpx;
  color: #999;
}

.activity-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.activity-name {
  font-size: 28rpx;
  color: #333;
}

.activity-status {
  font-size: 26rpx;
}

/* 会员权益 */
.benefit-section {
  margin-bottom: 30rpx;
}

.benefit-list {
  width: 100%;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.benefit-item .iconfont {
  margin-right: 10rpx;
  font-size: 24rpx;
}

/* 无数据提示 */
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  color: #999;
  font-size: 28rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}

/* 图标字体 */
@font-face {
  font-family: 'iconfont';
  src: url('data:font/woff2;charset=utf-8;base64,');
}

.icon-back:before {
  content: "\e7a7";
}

.icon-check:before {
  content: "\e7a9";
}
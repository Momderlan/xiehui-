/* pages/match/match.wxss */

.container {
  padding-top: 80rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 赛事列表 */
.match-list {
  width: 100%;
}

.match-item {
  margin-bottom: 30rpx;
  overflow: hidden;
}

.match-header {
  position: relative;
  height: 200rpx;
}

.match-image {
  width: 100%;
  height: 100%;
}

.match-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 24rpx;
}

.match-content {
  padding: 20rpx;
}

.match-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.match-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.info-item .iconfont {
  margin-right: 10rpx;
  font-size: 26rpx;
}

.match-footer {
  display: flex;
  justify-content: flex-end;
}

.match-footer .btn {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
}

/* 无数据提示 */
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}


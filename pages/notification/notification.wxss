/* pages/notification/notification.wxss */

.container {
  padding: 30rpx;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

/* 通知列表 */
.notification-list {
  width: 100%;
}

.notification-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.notification-item:active {
  background-color: #f5f5f5;
}

/* 通知项头部 */
.item-header {
  display: flex;
  margin-bottom: 20rpx;
}

.item-image {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-date {
  font-size: 24rpx;
  color: #999;
}

.item-type {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

/* 通知项内容 */
.item-content {
  margin-bottom: 20rpx;
}

.item-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 通知项底部 */
.item-footer {
  display: flex;
  justify-content: flex-end;
}

.read-status {
  font-size: 24rpx;
  color: #999;
}

.read-status.unread {
  font-weight: bold;
}

/* 无数据提示 */
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}